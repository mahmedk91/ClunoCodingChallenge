{
  "name": "cluno-backend",
  "version": "1.0.0",
  "description": "Cluno backend in node js",
  "main": "tsconfig.js",
  "author": "Mohd Ahmed Khan",
  "scripts": {
    "pretest": "tsc",
    "test": "mocha --reporter spec --require ts-node/register test/**/*.spec.ts",
    "posttest": "rm -Rf ./dist/src",
    "build": "rm -Rf ./dist/src && tsc -p tsconfig-for-debug.json",
    "start": "tsc -p tsconfig-for-debug.json && rm -Rf ./dist/src && node dist/index.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.7",
    "@types/chai-http": "4.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^7.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  }
}
